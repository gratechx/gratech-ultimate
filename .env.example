# ============================================
# GraTech Ultimate - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================

# ============================================
# Google AI (Gemini, Veo, Imagen, TTS)
# ============================================
# Get your key: https://ai.google.dev/
GOOGLE_API_KEY=your_google_api_key_here

# ============================================
# Azure AI Foundry
# ============================================

# DeepSeek V3.1 (Azure AI)
DEEPSEEK_KEY=your_deepseek_key
DEEPSEEK_ENDPOINT=https://admin-mi4ctrot-eastus2.cognitiveservices.azure.com/

# Llama 3.1 405B & GPT-5 (Same resource)
LLAMA_KEY=your_llama_key
LLAMA_ENDPOINT=https://admin-9042-resource.cognitiveservices.azure.com/

# Azure OpenAI (GPT-4o)
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://gratech-openai.openai.azure.com/

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=GraTech Ultimate

# ============================================
# Backend Settings
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
LOG_LEVEL=info

# ============================================
# Optional: Redis (Caching)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Optional: Database
# ============================================
DATABASE_URL=postgresql://user:pass@localhost:5432/gratech

# ============================================
# Optional: Azure Services
# ============================================
AZURE_SUBSCRIPTION_ID=dde8416c-6077-4b2b-b722-05bf8b782c44
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id

# ============================================
# Security
# ============================================
JWT_SECRET=your_jwt_secret_min_32_chars
ENCRYPTION_KEY=your_encryption_key
